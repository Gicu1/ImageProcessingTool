@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">

    <form method="post">
        <input type="text" name="query" placeholder="Search Imgur" required />
        <button type="submit">Search</button>
    </form>
  
    <div style="display: grid; grid-template-columns: repeat(auto-fill, 100px); gap: 10px;">
        @foreach (var imageUrl in Model.Images)
        {
            <img src="@imageUrl" alt="Image from Imgur" style="width: 100px; height: 100px; object-fit: cover;" />
        }
    </div>
    
</div>
